# Frontend environment configuration (Create React App)
# Copy this file to `.env` in the same directory and update as needed.

# Base URL for the FastAPI backend. Default (if unset) is http://localhost:8000
# Example: http://localhost:8000
REACT_APP_API_BASE=http://localhost:8000

# Optional: alternative backend URL key (if your tooling expects it).
# The app prefers REACT_APP_API_BASE but will fall back to this if set.
REACT_APP_BACKEND_URL=

# Frontend base URL (used in redirects or absolute links if needed)
REACT_APP_FRONTEND_URL=http://localhost:3000

# WebSocket URL (if real-time features are added later)
REACT_APP_WS_URL=

# Environment name (development|production|test)
REACT_APP_NODE_ENV=development

# Disable/enable Next.js telemetry style flag (kept for parity with environments)
REACT_APP_NEXT_TELEMETRY_DISABLED=true

# Enable source maps in production builds (CRA reads GENERATE_SOURCEMAP, but we keep this for clarity)
REACT_APP_ENABLE_SOURCE_MAPS=true

# Port for local dev server (CRA typically uses PORT, not REACT_APP_PORT; provided for documentation)
REACT_APP_PORT=3000

# Trust proxy settings for deployments behind proxies (informational)
REACT_APP_TRUST_PROXY=true

# Log level for client-side logging (debug|info|warn|error)
REACT_APP_LOG_LEVEL=info

# Path used for health checks (frontend may call backend /health)
REACT_APP_HEALTHCHECK_PATH=/health

# Feature flags (comma-separated list, e.g., "newRunner,enableBeta")
REACT_APP_FEATURE_FLAGS=

# Experiments toggle
REACT_APP_EXPERIMENTS_ENABLED=false
